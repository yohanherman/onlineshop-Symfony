{% extends 'base.html.twig' %}

{% block title %}S'inscrire
{% endblock %}

{% block body %}


	{% include("_partials/_header.html.twig") %}


	<h1 class="mt-4 text-center">
		S'inscrire</h1>


	{{ form_errors(registrationForm) }}

	<div class="m-2">

		{{ form_start(registrationForm) }}

		{{ form_row(registrationForm.pseudo) }}

		<div class="form-group">
			{{ form_row(registrationForm.email) }}
		</div>
		{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
		{{ form_row(registrationForm.agreeTerms) }}


		<button class="bg-primary border-0 p-2 text-white rounded w-100" type="submit" class="btn">S'inscrire</button>
		{{ form_end(registrationForm) }}

	</div>


	<div class="text-center mt-3">
		<a class="text-decoration-none" href="{{path('app_login')}}">j'ai deja un compte</a>
	</div>

{% endblock %}
