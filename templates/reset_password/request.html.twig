{% extends 'base.html.twig' %}

{% block title %}Reset your password
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}


	<div class="container">

		<div class="row">

			<div class="col-lg-10 col-md-12 col-sm-12">

				<div class="mt-3 mb-3">
					<h1>recuperation du mot de passe</h1>
				</div>

				{{ form_start(requestForm) }}
				{{ form_row(requestForm.email) }}
				<div>
					<small>
						veuillez renseigner votre mot de passe et nous vous enverrons un email de reinitialisation du mot de passe.
					</small>
				</div>

				<button class="btn btn-primary col-lg-2 col-md-2 col-sm-8">envoyer</button>
				{{ form_end(requestForm) }}
			</div>

		</div>

	</div>

{% endblock %}
