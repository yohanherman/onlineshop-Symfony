{% extends 'base.html.twig' %}

{% block title %}
	se connecter
{% endblock %}

{% block body %}

	{% include("_partials/_header.html.twig") %}


	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}


		{# {% if app.user %}
													<div class="mb-3">
														vous connectez avec l'Email :
														{{ app.user.userIdentifier }},
														<a href="{{ path('app_logout') }}">se deconnecter</a>
													</div>
												{% endif %} #}


		<div class="m-2">
			<h1 class="h3 mb-3 font-weight-normal text-center mt-5">Connexion</h1>
			<div>
				<label class="mb-2" for="inputEmail">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
			</div>
			<div class="mt-4">
				<label class="mb-2" for="inputPassword">Mot de passe</label>
				<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
				<div class="text-end me-2 mt-2">
					<i class="fa-solid fa-eye"></i>
					{# <i class="fa-solid fa-eye-slash"></i> #}
				</div>

			</div>
			<div class="text-end mt-3">
				<a class="text-decoration-none" href="#">Mot de passe oubli√© ?</a>
			</div>


			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<div class="checkbox mb-3">
				<label class="m-2">
					<input type="checkbox" name="_remember_me">
					se souvenir de moi
				</label>
			</div>

			<div></div>

			<div class="d-flex justify-content-center">
				<button class="btn btn-lg btn-primary w-100 m-2" type="submit">
					S'identifier
				</button>
			</div>

			<div class="text-center mt-3">

				<a class="text-decoration-none " href="{{path('app_register')}}">
					je n'ai pas de compte
					<i class="fa-solid fa-arrow-right"></i>
				</a>
			</div>

		</div>
	</form>

{% endblock %}
